<p style="color: green"><%= notice %></p>

<div class="engraved" style="padding-left: 20px">
  <span>Assumptions</span>
</div>

<div class="list-group list-group-light">
  <% @assumptions.each do |assumption| %>
    <%= link_to assumption, :onclick => "callAssumption(#{assumption.id})",
                class: "list-group-item list-group-item-action px-3 border-0 ripple link" do %>
      <i class="bi bi-arrow-right-circle-fill"></i> <%= assumption.name.capitalize %>
    <% end %>
  <% end %>
</div>

<!-- if in the cucumber test, show the button -->
<% if Rails.env.test? %>
  <p><%= link_to "New assumption", new_assumption_path %></p>
<% end %>

<!-- if in the production, show the button -->
<% if session[:userinfo].present? %>
  <p style="padding-left: 20px"><%= link_to "New assumption", new_assumption_path %></p>
<% end %>

<script>
    function callAssumption(assumptionId) {
        const label = 'assumptions' + assumptionId;
        window.parent.fadeOutUnconnected(label);
    }

    function resetGraph() {
        window.parent.resetGraph();
    }
</script>
