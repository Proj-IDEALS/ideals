<%= form_with(model: theory) do |form| %>
  <% if theory.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(theory.errors.count, "error") %> prohibited this theory from being saved:</h2>

      <ul>
        <% theory.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description %>
  </div>
<h3>List of Assumptions</h3>
  <%= form_tag assumptions_path, method: :get do %>
    <% Assumption.all.each do |assumption| %>
      <%= check_box_tag "assumptions[]", assumption.id %>
      <%= label_tag "assumptions_#{assumption.id}", assumption.name %><br>
    <% end %>
  <% end %>

  <div>
    <%= form.submit %>
  </div>
<% end %>