<p style="color: green"><%= notice %></p>

<h1>IDEAList</h1>

<% if flash[:alert].present? %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>

<div id="theories">
  <p>
    <em><%= link_to "I want to look at theories", theories_path %></em>
  </p>
</div>

<div id="assumptions">
  <p>
    <em><%= link_to "I want to look at assumptions", assumptions_path %></em>
  </p>
</div>

<div id="practices">
  <p>
    <em><%= link_to "I want to look at practices", practices_path %></em>
  </p>
</div>
<% if session[:userinfo].present? %>
<%= button_to 'Logout', 'auth/logout', method: :get, data: { turbo: false } %>
<% else %>
<%= button_to 'Login', '/auth/auth0', method: :post, data: { turbo: false } %>
<% end %>

